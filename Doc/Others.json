    "docker_deployment": {
      "images": {
        "frontend": "mudra/frontend:latest",
        "backend": "mudra/backend:latest",
        "nginx": "nginx:alpine"
      },
      "registry": "Docker Hub / AWS ECR",
      "orchestration": "Docker Compose (dev/staging), Kubernetes (production)"
    },
    "rollback_strategy": {
      "automatic": "Rollback if health checks fail",
      "manual": "One-click rollback to previous version",
      "database": "Migrations are reversible with down() functions"
    },
    "zero_downtime_deployment": {
      "strategy": "Blue-Green deployment",
      "process": [
        "Deploy new version to Green environment",
        "Run health checks on Green",
        "Switch load balancer to Green",
        "Keep Blue as backup for quick rollback",
        "After validation, decommission Blue"
      ]
    }
