          "steps": ["Dependency scan (Snyk)", "SAST (SonarQube)", "Container scan"]
        },
        "5_deploy_staging": {
          "steps": ["Deploy to staging", "Run smoke tests", "Notify team"]
        },
        "6_e2e_tests": {
          "steps": ["Run Cypress E2E tests on staging"]
        },
        "7_manual_approval": {
          "steps": ["Human verification", "QA sign-off"]
